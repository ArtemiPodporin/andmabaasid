-- Lisame kasutaja myyja
CREATE USER 'myyja'@'localhost' IDENTIFIED BY '123456';


-- Andmebaasi poodi antakse kasutajale myyja õigused ALTER TABLE ja INSERT INTO
GRANT ALTER, INSERT ON Pood.brand TO 'myyja'@'localhost';


-- Kasutajale myyja keelame CREATE TABLE õiguse
REVOKE CREATE TABLE ON Pood.* FROM 'myyja'@'localhost';
