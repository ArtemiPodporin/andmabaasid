CREATE Database pood;
use Pood;

CREATE TABLE brand (
    id INT PRIMARY KEY identity(1,1),
    brand VARCHAR(255),
    roivaste_tyyp VARCHAR(255),
    hind DECIMAL(10, 2)
);


insert into brand (id, brand, roivaste_tyyp, hind) values (1, 'Nike', 'Sneakers', '18,4');
